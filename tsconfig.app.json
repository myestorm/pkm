{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "www",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "mocha"
    ],
    "typeRoots": [
      "./node_modules/koa-body",
      "./node_modules/@types",
      "./app/types",
      "./src/types"
    ]
  },
  "include": [
    "tests/*.ts",
    "app/**/*.ts",
    "app/**/*.d.ts",
    "types/**/*.ts"
  ]
}
